<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.view.ClaimAffairController">
   <children>
      <ScrollPane minWidth="1000.0" style="-fx-background-color: white;" stylesheets="@style.css">
         <content>
            <VBox id="background" alignment="TOP_CENTER" minHeight="600.0" minWidth="1000.0" style="-fx-background-color: white;" stylesheets="@style.css">
               <padding>
                  <Insets bottom="80.0" left="55.0" right="55.0" />
               </padding>
               <children>
                  <ToolBar nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: white;">
                     <items>
                        <Button id="language" fx:id="bt_language" mnemonicParsing="false" onAction="#changeLanguage" text="English" textFill="#0066cc">
                           <font>
                              <Font name="Microsoft YaHei Bold" size="15.0" />
                           </font>
                        </Button>
                        <ImageView fitHeight="50.0" fitWidth="50.0" onMousePressed="#toProfileView" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../resources/pic/user.png" />
                           </image>
                        </ImageView>
                     </items>
                     <padding>
                        <Insets bottom="20.0" left="20.0" top="20.0" />
                     </padding>
                  </ToolBar>
                  <HBox id="stage" spacing="20.0" stylesheets="@style.css">
                     <children>
                        <VBox id="group" fx:id="btn_group" spacing="20.0" stylesheets="@style.css">
                           <children>
                              <Label fx:id="lb_workmenu" text="Work Menu" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei Bold" size="20.0" />
                                 </font>
                              </Label>
                              <Line endX="205.0" startX="55.0" stroke="#0066cc" strokeMiterLimit="0.0" />
                              <Button id="bt_insuranceClaim" fx:id="btn_claimAffiar" mnemonicParsing="false" onAction="#getAllClaimAffiar" stylesheets="@style.css" text="Insurance Claim" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei" size="20.0" />
                                 </font>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                              </Button>
                              <Line fx:id="line_all" endX="205.0" startX="55.0" stroke="#0066cc" strokeMiterLimit="0.0" />
                              <Button fx:id="btn_pending" mnemonicParsing="false" onAction="#getPendingAffair" text="Pending" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei" size="15.0" />
                                 </font>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="30.0" />
                                 </VBox.margin>
                              </Button>
                              <Line fx:id="line_pending" endX="205.0" startX="55.0" stroke="#0066cc" strokeMiterLimit="0.0" />
                              <Button fx:id="btn_processing" mnemonicParsing="false" onAction="#getProcessingAffair" text="Processing" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei" size="15.0" />
                                 </font>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="30.0" />
                                 </VBox.margin>
                              </Button>
                              <Line fx:id="line_processing" endX="205.0" startX="55.0" stroke="#0066cc" strokeMiterLimit="0.0" />
                              <Button fx:id="btn_closed" mnemonicParsing="false" onAction="#getClosedAffiar" text="Closed" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei" size="15.0" />
                                 </font>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="30.0" />
                                 </VBox.margin>
                              </Button>
                              <Line fx:id="line_closed" endX="205.0" startX="55.0" stroke="#0066cc" strokeMiterLimit="0.0" />
                              <Button fx:id="btn_logout" mnemonicParsing="false" onAction="#logout" text="Log Out" textFill="#0066cc">
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                              </Button>
                           </children>
                        </VBox>
                        <VBox spacing="25.0">
                           <children>
                              <Label id="lb_claimAffairs" fx:id="lb_claimAffairs" text="Claim Affairs" textFill="#0066cc">
                                 <font>
                                    <Font name="Microsoft YaHei Bold" size="20.0" />
                                 </font>
                              </Label>
                              <TableView fx:id="tb_claims" prefHeight="700.0" stylesheets="@../../client/view/style.css">
                                 <columns>
                                    <TableColumn fx:id="policyIdColumn" minWidth="150.0" prefWidth="-1.0" text="Policy ID" />
                                    <TableColumn fx:id="insuranceTypeColumn" minWidth="150.0" prefWidth="-1.0" text="Accident Type" />
                                    <TableColumn fx:id="dateOfSubmissionColumn" minWidth="150.0" prefWidth="-1.0" text="Date of&#10;Submission" />
                                    <TableColumn fx:id="amountOfDamageColumn" minWidth="150.0" prefWidth="-1.0" text="Amount of&#10;Damages" />
                                    <TableColumn fx:id="acceptanceColumn" minWidth="150.0" prefWidth="-1.0" text="Acceptance" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</HBox>
